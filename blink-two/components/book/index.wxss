.container {
  margin-top: 30rpx;
  display: flex;
  position: relative; /* 父相 */
  box-shadow: 2px 2px 3px #e3e3e3; /* 阴影效果 */
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
}

.container image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}

.description {
  /* 看到 padding 就要警觉, 撑大盒子 */
  box-sizing: border-box;
  width: 100%;
  position: absolute; /* 子绝, 覆盖图片, 实现位置的重叠, 使用定位 */
  bottom: 0;
  background-color: #fff;
  padding: 5rpx 10rpx 8rpx 15rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
}

.title {
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.author {
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 10rpx;
  text-overflow: ellipsis; /* 一行省略 */
  white-space: nowrap;
  overflow: hidden;
}

.foot {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.footer {
  color: #666666;
}
