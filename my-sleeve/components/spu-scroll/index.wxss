/* components/spu-scroll/index.wxss */
.container {
  /*不要固定死 width 和 height*/
  box-sizing: border-box;
  width: 100%;
  padding: 42rpx 0 34rpx 28rpx;
  background-color: #ffffff;
}

.title {
  width: 694rpx;
  height: 90rpx;
}

.price-unit {
  font-size: 24rpx !important;
  color: #157658 !important;
}

.price-value {
  font-size: 26rpx !important;
  color: #157658 !important;
}

.scroll-view {
  margin-top: 28rpx;
  display: flex;
  flex-direction: row;
}

.inner {
  display: flex;
  flex-direction: row;
}

.spu-container {
  margin-right: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.spu-text {
  font-size: 20rpx;
  color: #666666;
  margin-top: 20rpx;
  /*
  一行省略,
  需要固定宽度, 不然 text 会被文本撑开, 没有 ... 省略号效果
  同时给一个 max-width 实现 "上下两条文本" 垂直居中的效果
  */
