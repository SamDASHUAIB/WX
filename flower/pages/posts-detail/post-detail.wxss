/* pages/posts-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
  /* 垂直居中 */
  align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666666;
}

.const-text {
  font-size: 24rox;
  color: #999999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rox;
  margin-left: 30rpx;
  color: #999999;
}

.title {
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #4b556c;
  letter-spacing: 2px;
}

.share-collection {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 30rpx;
}

.share-collection image {
  width: 90rpx;
  height: 90rpx;
}

.line1 {
  margin-left: 30rpx;
  flex-grow: 50;
  border: 1px solid #e5e5e5;
}

.line2 {
  flex-grow: 3;
  border: 1px solid #e5e5e5;
}

.detail {
  color: #666666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 185rpx;
  opacity: 0.6;
}