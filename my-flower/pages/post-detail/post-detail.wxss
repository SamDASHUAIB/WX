.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;

  margin-left: 30rpx;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  color: #4b556c;
}

.share-collection-container {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.share-collection-container image {
  width: 90rpx;
  height: 90rpx;
}

/*使用边框来模拟横线, 然后指定其占据的份数, flex */
.line-one {
  margin-left: 30rpx;
  flex-grow: 50;
  border: 1px solid #e5e5e5;
}


.line-two {
  flex-grow: 3;
  border: 1px solid #e5e5e5;
}

.detail {
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  text-indent: 2em;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 230rpx;
  margin-top: -55rpx;
  opacity: .6;

}